doctype html
html(lang='en')
    head
        meta(charset='UTF-8', name='viewport', content='width=device-width, initial-scale=1.0')
        title redirect
        script(async, defer, src=redirect_script_src)
        script(async, defer).
            function counter() {
                count--
                x.innerText = count.toString(10)
                if (count === 0) {
                    window.location.href = '#{redirect_api_src}'
                }
            }
        style.
            * {
                text-align: center;
                font-family: monospace;
            }
        link(rel="apple-touch-icon", sizes="180x180", href=`${base_url}/icons/apple-touch-icon.png`)
        link(rel='icon', type='image/png', sizes='32x32', href=`${base_url}/icons/favicon-32x32.png`)
        link(rel='icon', type='image/png', sizes='16x16', href=`${base_url}/icons/favicon-16x16.png`)
        link(rel='manifest', href=`${base_url}/icons/site.webmanifest`)
    body(onload='start()')
        p
        | #{redirect_issue_message} app will redirect in
        |
        span#count
        |  seconds...
        br