doctype html
html(lang='en')
    head
        meta(charset='UTF-8', name='viewport', content='width=device-width, initial-scale=1.0')
        title Image Resize
        script(async, defer, src=image_edit_script_src)
        style.
            * {
                font-family: monospace;
            }

            .container {
                text-align: center;
            }

            h1 {
                margin: 25px;
            }

            input {
                margin: 7px;
                border-radius: 10px;
            }

            input:focus {
                outline: none;
            }

            .btn{
                background-color: #c5ffe7;
            }
        link(rel="apple-touch-icon", sizes="180x180", href=`${base_url}/icons/apple-touch-icon.png`)
        link(rel='icon', type='image/png', sizes='32x32', href=`${base_url}/icons/favicon-32x32.png`)
        link(rel='icon', type='image/png', sizes='16x16', href=`${base_url}/icons/favicon-16x16.png`)
        link(rel='manifest', href=`${base_url}/icons/site.webmanifest`)
    body
        .container
            h1 Image Resize Module
            form(method="post", action=logout_api_src)
                p welcome #{name}
                input(type='submit' value='logout')
            form(id='myform', action=image_edit_api_src, method='post', enctype='multipart/form-data')
                label(for='myfile') select a file ->
                input#myfile(for='myfile', type='file', accept='.jpeg, .png, .jpg', name='myfile', required, class='btn')
                br
                p#file-height-width Height : 0 px Breadth : 0 px
                label(for='height')  height(px) :
                input#height(type='number', min='10', max='5000', name='height', required)
                br
                label(for='width')  width(px) :
                input#width(type='number', min='10', max='5000', name='width', required)
                br
                input(type='submit', onclick='formSubmit()')

